<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="css/adminrequirements.css">
<link rel="icon" href="img/logo.png" type="image/x-icon">
<title>Requirements Request Page</title>
</head>
<body>
    <%- include('header/navbar.ejs') %>
    <div class="container">
      <div class="event-form">
        <h2>Requirements Request Form</h2>
        <form action="/asend-email" method="post">
          <div class="form-group">
            <label for="requesterName">Requester Name:</label>
            <input type="text" id="requesterName" name="requesterName" required>
          </div>
  
          <div class="form-group">
            <label for="eventType">Event Type:</label>
            <div class="dropdown">
              <select id="eventType" name="eventType" class="dropdown-select" required>
                <option value="" disabled selected>Select Event Type</option>
                <option value="All">All Departments</option>
                <option value="Conference">Conference</option>
                <option value="Workshop">Workshop</option>
                <option value="Seminar">Seminar</option>
                <option value="Seminar">Mock Interview</option>
                <option value="Other">Other</option>
              </select>
            </div>
          </div>

          <div class="form-group" id="other-event-type" style="display: none;">
            <label for="other-event-type-input">Other Event Type:</label>
            <input type="text" id="other-event-type-input" name="other-event-type-input">
          </div>
  
          <div class="form-group">
            <label for="date">Date:</label>
            <input type="date" id="date" name="date" required>
          </div>
  
          <div class="form-group">
            <label for="duration">Duration:</label>
            <input type="text" id="duration" name="duration" required>
          </div>
  
          <div class="form-group">
            <label for="department">Department:</label>
            <div class="dropdown">
              <select id="department" name="department" class="dropdown-select" required>
                <option value="" disabled selected>Select Department</option>
                <option value="aids">AIDS</option>
                <option value="csbs">CSBS</option>
                <option value="cse">CSE</option>
                <option value="civil">Civil</option>
                <option value="ece">ECE</option>
                <option value="eee">EEE</option>
                <option value="mech">Mech</option>
              </select>
            </div>
          </div>
  
          <div class="form-group">
            <label for="studentCount">Audience Count:</label>
            <input type="number" id="studentCount" name="studentCount" required>
          </div>
  
          <div class="form-group">
            <label for="contactDetails">Contact Details:</label>
            <input type="text" id="contactDetails" name="contactDetails" required>
          </div>
  
          <div class="form-group">
            <label for="description">Description:</label>
            <textarea id="description" name="description" rows="4" required></textarea>
          </div>
  
          <button type="submit" class="btn-request">Request</button>
        </form>
      </div>
    </div>

    <div class="footer">
      &copy; 2024 Copyright: SDC PSG iTech
      <br>
      <a style="color: blue; font-size: 16px;; font-weight: bold;" href="/devops">DevOps Team</a>
    </div>

</body>
</html>

<script>
  document.getElementById('event-type').addEventListener('change', function() {
    var otherEventTypeInput = document.getElementById('other-event-type');
    if (this.value === 'Other') {
      otherEventTypeInput.style.display = 'block';
    } else {
      otherEventTypeInput.style.display = 'none';
    }
  });
</script>