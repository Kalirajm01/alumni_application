<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<link rel="stylesheet" href="css/alumnibroadcast.css">
<link rel="icon" href="img/logo.png" type="image/x-icon">
<title>Alumni Broadcast Page</title>
</head>
<body>
    <%- include('header/navbar.ejs') %>
    <div class="content">
        <h2>Broadcast a Message</h2>
        <div class="input-group">
            <label for="fromInput">From:</label>
            <input type="text" id="fromInput" placeholder="Your name">
        </div>
        <div class="input-group">
            <label for="messageInput">Message:</label>
            <textarea id="messageInput" placeholder="Type your message..."></textarea>
        </div>
        <button onclick="broadcastMessage()">Broadcast</button>
        <div id="messageDisplay"></div>
    </div>
    <div class="footer">
        &copy; 2024 Alumni Connect Application
    </div>
    <script src="js/broadcast.js"></script>
</body>
</html>


<script>
    function broadcastMessage() {
    var from = document.getElementById("fromInput").value;
    var message = document.getElementById("messageInput").value;

    // Check if from and message are not empty
    if (from.trim() === "" || message.trim() === "") {
        alert("Please fill in both 'From' and 'Message' fields.");
        return;
    }

    // Send the message to the server
    // Example: Implement AJAX request to server

    // For demonstration purposes, display the message directly
    displayMessage(from, message);
}

function displayMessage(from, message) {
    var messageDisplay = document.getElementById("messageDisplay");
    var newMessage = document.createElement("div");
    newMessage.classList.add("message");
    newMessage.innerHTML = `<strong>${from}:</strong> ${message}`;
    messageDisplay.appendChild(newMessage);
}


</script>